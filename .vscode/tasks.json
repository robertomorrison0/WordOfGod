{
    "version": "2.0.0",
    "inputs": [{
        "id": "locale",
        "description": "What locale do you want to use?",
        "type": "pickString",
        "options": [
            "de_DE.utf8", 
            "en_US.utf8"
        ]
    }],
    "tasks": [
        {
            "label": "build & run (valgrind)",
            "dependsOn": [
                "build",
                "launch (valgrind)"
            ],
            "dependsOrder": "sequence",
            "group": "build",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build & run",
            "dependsOn": [
                "build",
                "launch"
            ],
            "dependsOrder": "sequence",
            "group": "build",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build & run (locale)",
            "dependsOn": [
                "build",
                "launch (locale)"
            ],
            "dependsOrder": "sequence",
            "group": "build",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "launch (valgrind)",
            // "dependsOrder": "sequence",
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "command": "valgrind",
            "group": "build",
            "args": [
                "--leak-check=full",
                "--num-callers=20",
                "--log-file=vgdump.txt",
                "--show-leak-kinds=definite",
                "--suppressions=/usr/share/glib-2.0/valgrind/glib.supp",
                "--suppressions=/usr/share/gtk-4.0/valgrind/gtk.supp",
                "./src/bible",
            ],
            "problemMatcher": "$msCompile"

        },
        {
            "label": "launch",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "command": "./src/bible",
            "group": "build",
            "args": [
                "",
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "launch (locale)",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "command": "LC_MESSAGES=${input:locale}",
            "group": "build",
            "args": [
                "./src/bible",
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "command": "rm",
            "group": "build",
            "args": [
                 "-rf", "build/", "&&",
                "meson", "setup", "build", "&&",
                "cd", "build/", "&&",
                "meson","compile"
            ],
            "problemMatcher": "$msCompile"

            //  &&  && cd build/ && meson compile
        }
   ]
}