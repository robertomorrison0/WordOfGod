<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="gtkbible">
  <schema id="org.robertomorrison.gtkbible" path="/org/robertomorrison/gtkbible/">
    <key name="style-variant" type="s">
      <choices>
        <choice value="follow"/>
        <choice value="light"/>
        <choice value="dark"/>
        <choice value="black"/>
        <choice value="yellow"/>
      </choices>
      <default>'follow'</default>
      <summary>Style Variant</summary>
      <description>Use the light or dark variant of the GTK theme and/or GtkSourceView style scheme.</description>
    </key>
    <key name="line-distance" type="s">
      <choices>
        <choice value="far"/>
        <choice value="normal"/>
        <choice value="close"/>
      </choices>
      <default>'close'</default>
      <summary>Line Distance</summary>
      <description>Choose the distance between lines in the TextView</description>
    </key>
    <key name="font-size" type="u">
      <range min="8" max="40"/>
      <default>12</default>
      <summary>Font Size</summary>
      <description>The font size of the TextView</description>
    </key>
    <key name="font" type="s">
      <default>"Serif"</default>
      <summary>Font Name</summary>
      <description>The font the TextView</description>
    </key>
    <key name="highlights" type="s">
      <default>"[]"</default>
      <summary>Highlights</summary>
      <description>The highlighted verses in json string format</description>
    </key>


    <key name="current-chapter" type="u">
      <range min="1" max="200"/>
      <default>2</default>
      <summary>Current Chapter</summary>
      <description>The currently active chapter</description>
    </key>
    <key name="current-book" type="u">
      <range min="1" max="100"/>
      <default>2</default>
      <summary>Current Book</summary>
      <description>The currently active book</description>
    </key>
    <key name="current-translation" type="s">
      <default>"CJB"</default>
      <summary>Current Translation</summary>
      <description>The currently active translation</description>
    </key>
    <key name="current-language" type="s">
      <default>"English"</default>
      <summary>Current Language</summary>
      <description>The currently active language</description>
    </key>
    <key name="window-width" type="i">
      <default>640</default>
    </key>
    <key name="window-height" type="i">
      <default>480</default>
    </key>
    <key name="window-is-maximized" type="b">
      <default>false</default>
    </key>
    <key name="window-is-fullscreen" type="b">
      <default>false</default>
    </key>

    
  </schema>
</schemalist>
