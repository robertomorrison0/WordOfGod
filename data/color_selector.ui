<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <template class="ColorSelector" parent="GtkWidget">
    <property name="hexpand">true</property>
    <child>
      <object class="GtkBox" id="box">
        <property name="hexpand">true</property>
        <property name="halign">start</property>
        <property name="orientation">horizontal</property>
        <property name="spacing">5</property>
        <property name="margin-top">12</property>
        <property name="margin-bottom">12</property>
        <property name="margin-start">12</property>
        <property name="margin-end">12</property>

        <!-- <child>
          <object class="AdwClamp" id="box">
    <property name="hexpand">true</property> -->

            <child>
              <object class="GtkButton" id="none">
                <style>
                  <class name="color-selector"/>
                  <!--  -->
                  <class name="none"/>
                </style>
                <property name="hexpand">true</property>
                <property name="halign">center</property>
                <!-- <property name="group">red</property> -->
                <property name="focus-on-click">false</property>
                <property name="action-name">color-variant</property>
                <property name="action-target">'none'</property>
                <!-- <property name="tooltip-text" translatable="yes">Follow System Style</property> -->
                <accessibility>
                  <property name="label" translatable="yes">Follow system style</property>
                </accessibility>
              </object>
            </child>
            <child>
              <object class="GtkButton" id="green">
                <style>
                  <class name="color-selector"/>
                  <!--  -->
                  <class name="green"/>
                </style>
                <property name="hexpand">true</property>
                <property name="halign">center</property>
                <!-- <property name="group">red</property> -->
                <property name="focus-on-click">false</property>
                <property name="action-name">color-variant</property>
                <property name="action-target">'green'</property>
                <!-- <property name="tooltip-text" translatable="yes">Follow System Style</property> -->
                <accessibility>
                  <property name="label" translatable="yes">Follow system style</property>
                </accessibility>
              </object>
            </child>
            <child>
              <object class="GtkButton" id="red">
                <style>
                  <class name="color-selector"/>

                  <class name="red"/>
                </style>
                <property name="hexpand">true</property>
                <property name="halign">center</property>
                <property name="focus-on-click">false</property>
                <property name="action-name">color-variant</property>
                <property name="action-target">'red'</property>
                <!-- <property name="tooltip-text" translatable="yes">Light Style</property> -->
                <accessibility>
                  <property name="label" translatable="yes">Light style</property>
                </accessibility>
              </object>
            </child>
            <child>
              <object class="GtkButton" id="blue">
                <style>
                  <class name="color-selector"/>
                  <class name="blue"/>
                </style>
                <property name="hexpand">true</property>
                <property name="halign">center</property>
                <!-- <property name="group">red</property> -->
                <property name="focus-on-click">false</property>
                <property name="action-name">color-variant</property>
                <property name="action-target">'blue'</property>
                <!-- <property name="tooltip-text" translatable="yes">Dark style</property> -->
                <accessibility>
                  <property name="label" translatable="yes">Dark style</property>
                </accessibility>

              </object>
            </child>
            <child>
              <object class="GtkButton" id="yellow">
                <style>
                  <class name="color-selector"/>

                  <class name="yellow"/>
                </style>
                <property name="hexpand">true</property>
                <property name="halign">center</property>
                <!-- <property name="group">red</property> -->
                <property name="focus-on-click">false</property>
                <property name="action-name">color-variant</property>
                <property name="action-target">'yellow'</property>
                <!-- <property name="tooltip-text" translatable="yes">Yellow Style</property> -->
                <accessibility>
                  <property name="label" translatable="yes">Yellow style</property>
                </accessibility>
              </object>
            </child>
            <child>
              <object class="GtkButton" id="pink">
                <style>
                  <class name="color-selector"/>
                  <class name="pink"/>
                </style>
                <property name="hexpand">true</property>
                <property name="halign">center</property>
                <!-- <property name="group">red</property> -->
                <property name="focus-on-click">false</property>
                <property name="action-name">color-variant</property>
                <property name="action-target">'pink'</property>
                <!-- <property name="tooltip-text" translatable="yes">Black Style</property> -->
                <accessibility>
                  <property name="label" translatable="yes">Black style</property>
                </accessibility>
              </object>
            </child>
          </object>

        </child>

      <!-- </object>
    </child> -->
  </template>
</interface>
